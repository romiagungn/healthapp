generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id          String    @id @default(cuid())
  sku         String    @unique
  name        String
  imageUrl    String
  price       Float
  description String?
  category    String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
